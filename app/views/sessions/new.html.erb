<% provide(:title, "Log in") %>
<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>

  <%= f.submit "ログインする"%>
<% end %>

<p><%= link_to "新規会員登録はこちら", signup_path %></p>